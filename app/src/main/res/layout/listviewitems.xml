<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor"
    android:layout_centerHorizontal="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/boxColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/shopPhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/shopPhoto"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/shopName"
                android:textColor="@color/textColor"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/printRatesBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="109dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="108dp"
                android:gravity="center"
                android:text="@string/Rate"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopName"
                android:layout_above="@id/printRatesColor"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/printRatesColor"
                android:gravity="center"
                android:text="@string/bAndW"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopName"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_above="@id/printRatesColor"
                android:layout_toEndOf="@+id/printRatesColor"
                android:gravity="center"
                android:text="@string/perSheet"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/printRatesColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/printRatesBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/Rate"
                android:textColor="@color/textColor"
                android:textSize="16sp" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/address"
                android:layout_below="@+id/printRatesBlack"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/printRatesColor"
                android:gravity="center"
                android:text="@string/Color"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/address"
                android:layout_below="@+id/printRatesBlack"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_toEndOf="@+id/printRatesColor"
                android:gravity="center"
                android:text="@string/perSheet"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/printRatesColor"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/addressText"
                android:gravity="center"
                android:text="@string/address1"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/addressText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/printRatesColor"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/address2"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>